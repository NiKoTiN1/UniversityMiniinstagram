@using Microsoft.AspNetCore.Localization
@inject IViewLocalizer VLocalizer

@model ApplicationUser
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = Model.UserName;
    List<List<Post>> a = new List<List<Post>>();
    List<Post> b = new List<Post>();
    foreach(var post in Model.Posts)
    {
        if (b.Count % 3 == 0 && b.Count != 0)
        {
            a.Add(b);
            b = new List<Post>();
        }
        b.Add(post);

    }
    a.Add(b);
}
<div >
    <div class="container centeredSt" style="
                margin-top:100px;">
        <div class="row mb-5"  >
            <div style=" width: 200px; height: 200px;">
                <img src="@Model.Avatar.Path" class="img-fluid rounded-circle mb-2 border border-dark" style="
                    border-width: 3px !important;
                    width: 100%;
                    height: 100%;
                    max-height: 200px;
                    max-width: 200px;">
            </div>
            <div class="col-2 align-items-center pt-5 pl-4">
                <h1>@Model.UserName</h1>
                <h3>@Model.Description</h3>
            </div>
            <div class="col-0 align-items-center pt-5 pl-5">
                <a asp-action="EditProfile" class="btn btn-outline-secondary py-2 px-3 mt-3 mt-sm-0 ml-sm-3" onclick="ga('send', 'event', 'Examples', 'Hero', 'Download');">Edit profile</a>
            </div>
        </div>
        @foreach (var line in a)
        {
            <div class="row mb-4 text-center">
                @foreach (var col in line)
                {
                    <div class="col">
                        <img src=@col.Image.Path style="
                        object-fit: cover;
                        left: 0;
                        top: 0;
                        width: 100%;
                        height: 100%;
                        max-height: 400px;
                        max-width: 400px;" />
                    </div>
                }
            </div>
        }
    </div>
</div>