@using Microsoft.AspNetCore.Localization
@inject IViewLocalizer VLocalizer

@model ApplicationUser
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = Model.UserName + " profile editor";
}

<div class="centeredSt" style="margin-top:100px;">
    <form class="needs-validation" novalidate="">
        <div class="row mb-5 mx-auto">
            <img src="@Model.Avatar.Path" class="mx-auto img-fluid rounded-circle mb-2 border border-dark" style="
        border-width: 3px !important;
        width: 100%;
        height: 100%;
        max-height: 200px;
        max-width: 200px;
        cursor: pointer;
    ">
        </div>
        <div class="mb-3">
            <label for="username">Username</label>
            <div class="input-group">
                <div class="input-group-prepend">
                </div>
                <input type="text" class="form-control" id="username" placeholder="Username" required="">
                <div class="invalid-feedback" style="width: 100%;">
                    Your username is required.
                </div>
            </div>
        </div>

        <div class="mb-3">
            <label for="email">Email <span class="text-muted">(Optional)</span></label>
            <input type="email" class="form-control" id="email" placeholder="you@example.com">
            <div class="invalid-feedback">
                Please enter a valid email address for shipping updates.
            </div>
        </div>

        <hr class="mb-4">
        <button class="btn btn-primary btn-lg btn-block" type="submit">Continue to checkout</button>
    </form>
</div>