<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <title>@ViewBag.Title</title>
    <style>
        div.centered {
            position: absolute;
            width: 100%;
            height: 720px;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        div.centeredSt {
            width: 100%;
            left: 0;
            right: 0;
            margin-top: 60px;
            overflow-x: hidden;
        }
        div.row {
            position: relative;
            float: center;
            right: -35%;
        }
        .shadow-lg {
            box-shadow: 0 1rem 1rem rgba(0,0,0,.175) !important;
        }
    </style>
</head>
<body>
    <header>
        <div class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
            <a class="navbar-brand" asp-controller="News" asp-action="GetAllPosts">University Miniinstagram</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            @if (User.Identity.IsAuthenticated)
            {
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" asp-controller="News" asp-action="AddPost">Add Post <span class="sr-only">(current)</span></a>
                    </li>
                </ul>
                <div class="navbar-collapse collapse justify-content-end" id="navbarCollapse">
                    <form class="form-inline mt-2 mt-md-0">
                        <div>
                            <a asp-controller="Account" asp-action="Logout" class="btn btn-outline-success my-2 my-sm-0">Logout</a>
                        </div>
                    </form>
                </div>
            }
            else
            {
                <div class="navbar-collapse collapse justify-content-end" id="navbarCollapse">
                    <form class="form-inline mt-2 mt-md-0">
                        <div>
                            <a asp-controller="Account" asp-action="Login" class="btn btn-outline-success my-2 my-sm-0">Login</a>
                        </div>
                    </form>
                </div>
            }

        </div>
    </header>
    <main>
        @RenderBody()
        @RenderSection("Scripts", required: false)
    </main>
</body>
</html>
